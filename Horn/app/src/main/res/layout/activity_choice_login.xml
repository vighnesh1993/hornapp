<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:background="@drawable/screen"    android:layout_height="match_parent">    <ImageView        android:layout_width="230dp"        android:layout_height="150dp"        android:id="@+id/imageView"        android:src="@drawable/h_logo"        android:layout_below="@+id/textViewFB"        android:layout_centerHorizontal="true"        android:layout_marginTop="62dp" />    <Button        android:layout_width="300dp"        android:layout_height="40dp"        android:text="Login"        android:id="@+id/horn_login"        android:drawableLeft = "@drawable/gicon"        android:background="@drawable/custom_horn_login"        android:textAllCaps="false"        android:textColor="#ffffff"        android:paddingLeft="10dp"        android:layout_centerVertical="true"        android:layout_centerHorizontal="true"        android:layout_marginBottom="10dp" />    <Button        android:layout_width="300dp"        android:layout_height="40dp"        android:text="Login with facebook"        android:id="@+id/fb_login"        android:drawableLeft = "@drawable/fb8"        android:background="@drawable/custom_fb_btn_bg"        android:textAllCaps="false"        android:textColor="#ffffff"        android:paddingLeft="10dp"        android:layout_below="@+id/horn_login"        android:layout_alignStart="@+id/horn_login"        android:layout_marginBottom="10dp" />    <Button        android:layout_width="300dp"        android:layout_height="40dp"        android:text="Sign in with Google"        android:id="@+id/gp_login"        android:drawableLeft = "@drawable/gp"        android:background="@drawable/custom_google_btn_bg"        android:textColor="@color/blue_grey_800"        android:paddingLeft="10dp"        android:textAllCaps="false"        android:layout_below="@+id/fb_login"        android:layout_alignStart="@+id/fb_login" />    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Sign Up"        android:id="@+id/horn_signUp"        android:textColor="@color/primary_text_default_material_dark"        android:textSize="15dp"        android:layout_marginBottom="48dp"        android:layout_alignParentBottom="true"        android:layout_centerHorizontal="true" />    <!--<TextView-->        <!--android:layout_width="wrap_content"-->        <!--android:layout_height="wrap_content"-->        <!--android:text="Guest Login"-->        <!--android:id="@+id/horn_guest_login"-->        <!--android:textColor="@color/primary_text_default_material_dark"-->        <!--android:textSize="15dp"-->        <!--android:layout_alignBaseline="@+id/horn_signUp"-->        <!--android:layout_alignBottom="@+id/horn_signUp"-->        <!--android:layout_alignEnd="@+id/gp_login" />-->    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:id="@+id/textViewFB"        android:layout_alignParentTop="true"        android:layout_centerHorizontal="true" /></RelativeLayout>
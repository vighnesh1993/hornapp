<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="divider">@color/divider</item>
        <item name="android:icon">@color/icons</item>


        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="divider">@color/divider</item>
        <item name="android:icon">@color/icons</item>
    </style>

    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/blue_grey_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.CustomePopUpTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="divider">@color/divider</item>
        <item name="android:icon">@color/icons</item>
    </style>

    <style name="PrimaryButton">
        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.CustomBarTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget" />
    <style name="Widget.Light" />

    <style name="Widget.Light.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid" />
    <style name="Widget.Light.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="AppTheme.Light.TranslucentActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Widget.Light.ActionBar.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">#1565C0</item>
        <item name="fab_colorPressed">#2272CD</item>
        <item name="fab_colorRipple">#62B2FF</item>
    </style>

    <style name="MenuButtonsSmall.Accent">
        <item name="fab_colorNormal">#FFBE05</item>
        <item name="fab_colorPressed">#c79403</item>
        <item name="fab_colorRipple">#846201</item>
    </style>
    <style name="MenuButtonsSmall.Accident">
        <item name="fab_colorNormal">#c0392b</item>
        <item name="fab_colorPressed">#a62c20</item>
        <item name="fab_colorRipple">#911723</item>
    </style>
    <style name="MenuButtonsSmall.Key">
        <item name="fab_colorNormal">#19964e</item>
        <item name="fab_colorPressed">#1c9e2f</item>
        <item name="fab_colorRipple">#158e48</item>
    </style>
    <style name="MenuButtonsSmall.Starting">
        <item name="fab_colorNormal">#2980b9</item>
        <item name="fab_colorPressed">#1e6da1</item>
        <item name="fab_colorRipple">#165e8e</item>
    </style>
    <style name="MenuButtonsSmall.Towing">
        <item name="fab_colorNormal">#8e44ad</item>
        <item name="fab_colorPressed">#793496</item>
        <item name="fab_colorRipple">#62267b</item>
    </style>
    <style name="MenuButtonsSmall.Fuel">
        <item name="fab_colorNormal">#e73870</item>
        <item name="fab_colorPressed">#c42f5e</item>
        <item name="fab_colorRipple">#a41c48</item>
    </style>
    <style name="MenuButtonsSmall.Puncture">
        <item name="fab_colorNormal">#f39c12</item>
        <item name="fab_colorPressed">#c47f11</item>
        <item name="fab_colorRipple">#af700c</item>
    </style>
</resources>
